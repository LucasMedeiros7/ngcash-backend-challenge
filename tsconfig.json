{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "include": ["tests/**/**.spec", "tests/**/**.ts", "src/**/*.ts"]
}
